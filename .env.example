# ==============================================
# BEAUTY PLATFORM API - CONFIGURATION
# ==============================================

# -----------------
# Application
# -----------------
NODE_ENV=development
PORT=4000
APP_NAME="Beauty Platform API"
APP_URL=http://localhost:4000

# -----------------
# Database (MySQL)
# -----------------
DATABASE_URL="mysql://root:@localhost:3306/kes_beauty_db"
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE

# -----------------
# JWT Authentication
# -----------------
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# -----------------
# SMS Gateway (Cameroun)
# -----------------
SMS_PROVIDER=local_aggregator
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms-provider.cm/v1
SMS_SENDER_NAME=BeautyApp
SMS_MOCK_MODE=true  # true = retourne code en dev, false = envoie SMS réel

# -----------------
# Mobile Money (Orange Money)
# -----------------
ORANGE_MONEY_API_KEY=your-orange-money-api-key
ORANGE_MONEY_API_SECRET=your-orange-money-secret
ORANGE_MONEY_MERCHANT_ID=your-merchant-id
ORANGE_MONEY_API_URL=https://api.orange.com/orange-money-webpay/cm/v1
ORANGE_MONEY_WEBHOOK_SECRET=your-webhook-secret

# -----------------
# Mobile Money (MTN Money)
# -----------------
MTN_MONEY_API_KEY=your-mtn-money-api-key
MTN_MONEY_API_SECRET=your-mtn-money-secret
MTN_MONEY_SUBSCRIPTION_KEY=your-subscription-key
MTN_MONEY_API_URL=https://sandbox.momodeveloper.mtn.com
MTN_MONEY_WEBHOOK_SECRET=your-webhook-secret

# -----------------
# Google Maps (Géolocalisation)
# -----------------
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# -----------------
# Redis (Cache & Sessions)
# -----------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# -----------------
# Rate Limiting
# -----------------
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# -----------------
# CORS
# -----------------
ALLOWED_ORIGINS=http://localhost:4000,http://localhost:3000

# -----------------
# Logging
# -----------------
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# -----------------
# File Upload
# -----------------
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
UPLOAD_PATH=./uploads
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# -----------------
# Email (Optionnel)
# -----------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@beautyplatform.cm

# -----------------
# Monitoring & Analytics (Optionnel)
# -----------------
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=
